<UserControl x:Class="StoreManagement.WPF.Views.CustomerManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StoreManagement.WPF.Views"
             xmlns:viewModels="clr-namespace:StoreManagement.WPF.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:StoreManagement.WPF.Converters"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewModels:CustomerManagementViewModel}"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <materialDesign:DialogHost IsOpen="{Binding IsAddCustomerDialogOpen}">
            <materialDesign:DialogHost.DialogContent>
                <local:AddCustomerView DataContext="{Binding AddCustomerViewModel}"/>
            </materialDesign:DialogHost.DialogContent>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="مدیریت مشتریان" FontSize="24" FontWeight="Bold" Margin="20"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20,0">
                    <Button Command="{Binding OpenAddCustomerDialogCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            ToolTip="افزودن مشتری جدید">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Add" Margin="0,0,8,0"/>
                            <TextBlock Text="افزودن مشتری"/>
                        </StackPanel>
                    </Button>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="جستجو..."
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Width="300"
                             Margin="20,0,0,0"
                             VerticalAlignment="Center">
                        <materialDesign:HintAssist.FloatingOffset>
                            <Point Y="-18" X="0"/>
                        </materialDesign:HintAssist.FloatingOffset>
                    </TextBox>
                </StackPanel>

                <materialDesign:Card Grid.Row="2" Margin="20" VerticalAlignment="Stretch">
                    <DataGrid ItemsSource="{Binding PagedCustomers}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                              materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="نام" Binding="{Binding FirstName}" Width="*"/>
                            <DataGridTextColumn Header="نام خانوادگی" Binding="{Binding LastName}" Width="*"/>
                            <DataGridTextColumn Header="ایمیل" Binding="{Binding Email}" Width="2*"/>
                            <DataGridTextColumn Header="شماره تماس" Binding="{Binding PhoneNumber.Value}" Width="*"/>
                            <DataGridTextColumn Header="شهر" Binding="{Binding Address.City}" Width="*"/>

                            <DataGridTemplateColumn Header="عملیات" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Style="{StaticResource MaterialDesignIconButton}" 
                                                    ToolTip="ویرایش مشتری"
                                                    Command="{Binding DataContext.EditCustomerCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}">
                                                <materialDesign:PackIcon Kind="Pencil" />
                                            </Button>
                                            <Button Margin="8,0,0,0"
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    ToolTip="حذف مشتری"
                                                    Command="{Binding DataContext.DeleteCustomerCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}">
                                                <materialDesign:PackIcon Kind="Delete" Foreground="Red"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>
                </materialDesign:Card>

                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                    <Button Command="{Binding GoToPreviousPageCommand}" Content="قبلی" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <TextBlock Text="{Binding CurrentPage}" VerticalAlignment="Center" Margin="10,0"/>
                    <TextBlock Text="از" VerticalAlignment="Center" Margin="10,0"/>
                    <TextBlock Text="{Binding TotalPages}" VerticalAlignment="Center" Margin="10,0"/>
                    <Button Command="{Binding GoToNextPageCommand}" Content="بعدی" Style="{StaticResource MaterialDesignFlatButton}"/>
                </StackPanel>
            </Grid>
        </materialDesign:DialogHost>
    </Grid>
</UserControl>